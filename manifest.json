{
    "manifest_version": 3,
    "name": "One Click Block Twitter",
    "description": "Block a user with a single click on Twitter / X.",
    "version": "1.0.1",
    "content_scripts": [
        {
            "js": ["content.js"],
            "matches": ["https://*.twitter.com/*", "https://*.x.com/*"]
        }
    ]
}